<div class="bg">
<div class="admin-container">
  <a href="/logout">Sign out</a>
  <%= current_admin.username %>
  <h1 class="edit-title">Add A Challenge</h1>
  <form action="/admin/challenges" method="post" class="new-challenge-form">
    <input class="input-1"type="text" name="answer" placeholder="Enter the command you want to teach"><br>
    <textarea class="input-2"type="text" name="instructions" placeholder="Please type the instructions for your new lesson"></textarea><br>
    <input class="input-3" type="text" name="success" placeholder="Please type your success message here"></input><br>
    <input class="input-4" type="text" name="fail" placeholder="Please type your fail message here"></input><br>
    <input class="input-5" type="text" name="console_text" placeholder="Please type the return console text here"></input><br>
    <input type="submit" value="Create Exercise">
  </form>

  <% @challenges.each do |challenge| %>
    <div class="admin-challenge-container">
      <p class="admin-challenge-level">Level <%= challenge.level %></p>  
      <p class="admin-challenge-title"><%= challenge.answer %></p>
      <pre class="admin-challenge-instructions"><%= challenge.instructions %></pre>
      <a class="edit" href="/admin/challenges/<%= challenge.id %>/edit">edit</a> |
      <a class="delete" href="/admin/challenges/<%= challenge.id %>/delete">delete</a>
    </div>
  <% end %>
</div>
</div> <!--end bg -->